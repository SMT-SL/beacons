<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dd0033CC" 
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
     
    <!-- android:background="#99ffffff" -->

 <android.support.v7.widget.CardView
     xmlns:card_view="http://schemas.android.com/apk/res-auto"
     android:id="@+id/card_view"
     android:layout_width="fill_parent"
     android:layout_height="100dp"
     android:layout_gravity="center"
     card_view:cardCornerRadius="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >

        <ImageView
            android:id="@+id/image_promo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/frigo_logo_blanco_cuadrado" />

        <LinearLayout
             android:id="@+id/layout_Descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/image_promo">

            <TextView
                android:id="@+id/offer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/offer_desc"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
           

        </LinearLayout>
        <ImageView
        android:id="@+id/add_btn"
       	android:layout_alignParentRight="true"
  		  	android:layout_alignParentBottom="true"
        	 android:layout_below="@+id/layout_Descrip"
        	  	android:layout_width="25dp"
    		android:layout_height="40dp"
   			android:layout_marginRight="0dp"
        android:src="@drawable/remove" />
 		
    </RelativeLayout>
 	</android.support.v7.widget.CardView>
</RelativeLayout>